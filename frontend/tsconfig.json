{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "rootDir": "src",
    "outDir": "src/dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}

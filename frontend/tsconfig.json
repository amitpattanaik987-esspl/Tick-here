{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2020"],                       
    "module": "ES6",                       
    "rootDir": "src/scripts",              
    "outDir": "src/dist",                      
    "strict": true,                        
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/scripts"]
}

{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["DOM", "ES2016"],
    "module": "ES6",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "src/dist",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES6",                       
    "module": "ES6",                       
    "rootDir": "src/scripts",              
    "outDir": "src/dist",                      
    "strict": true,                        
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
